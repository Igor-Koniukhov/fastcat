{{template "base" .}}

{{define "content"}}

    <div class="main-wrapper-content">
        <section class="first-section">
            <div class="container">
                <div class="row">
                    <div class="col">

                        <address>
                            <strong class="dancing-sm "><span
                                        style="color: red;">Conta</span><span
                                        style="color: #333333">cts:</span></strong><br>
                            Teatral'nyi Ln, 4, 4 floor, <br>
                            Kharkiv, Kharkiv Oblast, 61000<br>
                            <abbr title="Phone">Contact number:</abbr><br>
                            <a href="tel:+380665532222">+38(066) 553 2222</a>
                        </address>

                    </div>
                    <h2 class="dancing-sm">Our location</h2>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2564.9047890590205!2d36.234321315695745!3d49.99439447941501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4127a0efb00d7d89%3A0xe891d820563b7e84!2zU09VUkNFIGlUIC0gaVQg0LrRg9GA0YHRiyDQsiDQpdCw0YDRjNC60L7QstC1!5e0!3m2!1sen!2sua!4v1629167249860!5m2!1sen!2sua"
                            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </section>
        <section class="second-section  margin-bottom-hidden">
            <div class="section-decoration section-decoration-120"
                 style="background-image: url(../static/img/section-decor/divider2_desktop.svg);"></div>
            <div class="wrapper-content wrapper-content-yellow margin-bottom-hidden">
                <div class="container">
                    <p class="text-center dancing-sm"><span
                                class="background-yellow">Contact with us - write a message:</span>
                    </p>

                    <div class="d-flex justify-content-center">
                        <div class="row">
                            <div class="mb-3 col-md-12">
                                <label for="email-client" name="email-client" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email-client" name="email-client"
                                       placeholder="name@example.com">
                            </div>
                            <div class="mb-3 col-md-12 col-sm-12">
                                <label for="text-area" class="form-label">Write massage</label>
                                <textarea class="form-control" id="text-area" name="text-area" rows="6"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="wrapper-roll-up roll-up">
        <img class="roll-up-button" src="../static/img/rocket-2-go.png" alt="roll-up">
    </div>
    <div class="modals">
        <div class="modal-custom">
            <button class="mod-btn"></button>
            <button class="mobile-close" data-swipe-threshold="20" data-swipe-timeout="500"
                    data-swipe-ignore="false"></button>
            <form class="modal__form form">
                <label for="email_login">Email:</label>
                <input type="email" class="form__input" id="email_login" name="email_login"
                       placeholder="your@email.com">

                <label for="pass_login">Password</label>
                <input type="tel" class="form__input" id="pass_login" name="pass_login" placeholder="password">

                <button class="form__btn button-custom">Log-in</button>
            </form>
        </div>
    </div>

{{end}}